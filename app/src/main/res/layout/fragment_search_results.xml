<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultsActivity">







    <TextView
        android:id="@+id/RecipieTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Search Results"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"

        >

    </TextView>

    <!--RecipeID Field-->

    <!--RecipeName Field-->


    <!--RecipeCategory Field-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


    <TextView
        android:id="@+id/RecipeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:text="RecpieID"
        android:textColor="@color/black"

        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        >

    </TextView>

        <TextView
            android:id="@+id/recipeIdTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="276dp"
            android:text="test"

            android:textColor="@color/black"
            android:textSize="15dp">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


    <TextView
        android:id="@+id/RecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:text="Recpie Name"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginLeft="100dp"
       >

    </TextView>

    <TextView
        android:id="@+id/recipeNameTest"
        android:layout_toRightOf="@+id/RecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:layout_marginLeft="50dp"
        android:text="test"
        android:textColor="@color/black"
        android:textSize="15dp"
        >

    </TextView>
</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    <TextView
        android:id="@+id/RecipeCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="100dp"
        android:text="Recpie Category"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_centerHorizontal="true">

    </TextView>

    <TextView
        android:id="@+id/recipeCategoryTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="30dp"
        android:text="test"
        android:textColor="@color/black"

        android:textSize="15dp"
        android:layout_centerHorizontal="true">

    </TextView>


    </LinearLayout>

    <Button

        android:id="@+id/reloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:shadowColor="@color/white"
        android:text="Reload"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true" />

    <ImageButton

        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_toLeftOf="@+id/RecipieTitel"
        android:layout_marginTop="12dp"
        android:layout_marginRight="75dp"



        />


</RelativeLayout>