<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultsActivity
">




    <ImageView
        android:layout_marginTop="90dp"
        android:id="@+id/recipeImage"
        android:layout_width="402dp"
        android:layout_height="184dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />




    <TextView
        android:id="@+id/RecipieTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Search Results"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"

        >

    </TextView>


    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"

        >


        <TextView
            android:id="@+id/recipeTitel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Titel"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            >

        </TextView>


        <TextView
            android:id="@+id/recipeHealthScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80"
            android:layout_marginLeft="-70dp"
            android:textColor="@color/white"

            android:textSize="15sp">

        </TextView>


        <ImageView

            android:id="@+id/recipeHealthScoreIcon"
            android:layout_width="10dp"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-20dp"
            android:layout_toRightOf="@+id/recipeHealthScore"
            android:layout_weight="1"
            android:src="@drawable/herz" />


    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp"
            android:gravity="center"
           >


            <ImageView

                android:id="@+id/veganIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/recipeHealthScore"
                android:layout_weight="1"
                android:src="@drawable/plantbased" />
            <ImageView

                android:id="@+id/vegetarianIcon"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/recipeHealthScore"
                android:layout_weight="1"
                android:src="@drawable/leaf" />


            <ImageView

                android:id="@+id/lactosefreeIcon"
                android:layout_width="wrap_content"
                android:layout_height="15dp"

                android:layout_marginRight="10dp"


                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/recipeHealthScore"
                android:layout_weight="1"
                android:src="@drawable/glutenfree" />
            <ImageView

                android:id="@+id/glutenFreeIcon"
                android:layout_width="wrap_content"
                android:layout_height="15dp"

                android:layout_marginRight="55dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/recipeHealthScore"
                android:layout_weight="1"
                android:src="@drawable/dariyfree" />

        </LinearLayout>









        <!--RecipeCategory Field-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:gravity="center"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">



        <ImageView

            android:id="@+id/timeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_access_time_24"
            android:layout_marginTop="0.8dp"
            android:layout_marginRight="1dp"
            />




        <TextView
            android:id="@+id/recipeMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:text="16 Minutes"

            android:textColor="@color/black"
            android:textSize="12sp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:gravity="center"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


            <TextView
                android:id="@+id/ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients:"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:textSize="14sp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="385dp"
        android:gravity="center"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <TextView
            android:id="@+id/recipeIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"


            android:text="Mehl Ei Pasta Brocoli Lacs Some random Results  "

            android:textColor="@color/black"
            android:textSize="12sp">

        </TextView>

    </LinearLayout>



    <Button

        android:id="@+id/reloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:shadowColor="@color/white"
        android:text="Reload"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true" />

    <ImageButton

        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_toLeftOf="@+id/RecipieTitel"
        android:layout_marginTop="12dp"
        android:layout_marginRight="75dp"



        />



</RelativeLayout>

</ScrollView>