<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    tools:context=".SearchFragment">

    <TextView
        android:id="@+id/SearchRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search a Recipie"
        android:textColor="@color/black"

        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00999999">

    </TextView>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Recipe Name"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchRecipe"
        app:layout_constraintVertical_bias="0.04000002" />

    <LinearLayout
        android:id="@+id/ingredientsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName"
        app:layout_constraintVertical_bias="0.060000002">
<!--
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"/>
          -->

        <EditText
            android:id="@+id/editTextIngredient"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Ingredient"
            android:inputType="text" />

        <Space
            android:id="@+id/spaceIngredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/removeIngredientButton"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:enabled="false"
                android:text="-"
                android:visibility="gone" />

            <Button
                android:id="@+id/addIngredientButton"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:text="+" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/excludeIngredientsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientsLayout"
        app:layout_constraintVertical_bias="0.060000002"
        >

       <!-- <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excluded Ingredients"
            android:textSize="16sp"
            android:gravity="center"/>-->

        <EditText
            android:id="@+id/editTextExcludedIngredient"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Excluded Ingredient"
            android:inputType="text" />

        <Space
            android:id="@+id/spaceExcludeIngredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/removeExcludeIngredientButton"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:enabled="false"
                android:text="-"
                android:visibility="gone"
                android:layout_marginBottom="25sp"/>

            <Button
                android:id="@+id/addExcludeIngredientButton"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:text="+"
                android:layout_marginBottom="25sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/excludeIngredientsLayout"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/IntolerancesButton"
                android:layout_width="110sp"
                android:layout_height="35sp"
                android:textSize="12sp"
                android:text="Intolerances"


                />

            <Button
                android:id="@+id/DietButton"
                android:layout_width="110sp"
                android:layout_height="35sp"
                android:textSize="12sp"
                android:text="Diet" />

            <Button
                android:id="@+id/CuisineButton"
                android:layout_width="110sp"
                android:layout_height="35sp"
                android:textSize="12sp"
                android:text="Cuisine" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/MacroLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectableLayout"
        app:layout_constraintVertical_bias="0.24000001"
        android:gravity="center">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:text="Macronutrients"
            android:textSize="19sp" />

        <LinearLayout
            android:id="@+id/CarbLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carb:"
                android:layout_marginLeft="20sp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="min."
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextNumberDecimal3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="-12dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:padding="9dp"
                android:text="0"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="mg"
                android:textSize="14sp" />

            <Space
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="max."
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextNumberDecimal4"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_margin="-12dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:padding="9dp"
                android:text="0"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="20sp"
                android:text="mg"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ProteinLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/proteinText"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:text="Protein:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/proteinMinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="min."
                android:textSize="14sp" />

            <EditText
                android:id="@+id/proteinMinEditText"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="-12dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:padding="9dp"
                android:text="0"
                android:textSize="14dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="mg"
                android:textSize="14sp" />

            <Space
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="max."
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ProteinMaxEditText"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_margin="-12dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:padding="9dp"
                android:textSize="14sp"
                android:text="0" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="20sp"
                android:text="mg"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MacroLayout">

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/input_bg"
            android:text="Search"
            android:textColor="@color/white"

            android:textColorHint="@color/white" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>